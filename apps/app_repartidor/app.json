{
  "expo": {
    "name": "CourierApp",
    "slug": "courier-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "courierapp",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A2E"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#1A1A2E"
      },
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION", "FOREGROUND_SERVICE"]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "isAndroidForegroundServiceEnabled": true,
          "locationAlwaysAndWhenInUsePermission": "Permite que CourierApp acceda a tu ubicación incluso cuando la app esté en segundo plano para que podamos compartir tu ruta con los clientes."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
